{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row">

        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign In</div>

                <div class="panel-body">
                    <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
                        <div class="form-group {{ errors.email ? 'has-error':'' }}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="test@domain.com" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email |first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group {{ errors.password ? 'has-error':'' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" placeholder="Enter your password" class="form-control" value="{{ old.password }}">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password |first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sing in</button>
                        <a href="{{ path_for('auth.signup') }}">Don't have an account?</a>
                        <a href="{{ path_for('auth.user.forget') }}">Forget password?</a>
                    </form>
                </div>
            </div>
        </div>

    </div>

{% endblock %}